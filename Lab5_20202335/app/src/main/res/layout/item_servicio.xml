<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Header con importancia -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewIcono"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ’¡"
                android:textSize="32sp"
                android:gravity="center"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Servicio"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/textViewPeriodicidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mensual"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipImportancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta"
                android:textSize="11sp"
                app:chipBackgroundColor="@color/chip_alta"
                app:chipStrokeWidth="0dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- InformaciÃ³n del pago -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Monto"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textViewMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/ 0.00"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Vencimiento"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textViewFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--/--/----"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/textViewDiasRestantes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faltan 5 dÃ­as"
                    android:textSize="11sp"
                    android:textColor="@color/warning_color"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="end"
            android:background="#FAFAFA">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMarcarPagado"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="âœ“ Pagado"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.ElevatedButton"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/checkbox_on_background"
                app:iconSize="16dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/success_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Editar"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:cornerRadius="8dp"
                app:strokeColor="@color/primary_color"
                android:textColor="@color/primary_color"
                android:layout_marginStart="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBorrar"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:text="ðŸ—‘"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.TextButton"
                app:cornerRadius="8dp"
                android:textColor="@color/error_color"
                android:layout_marginStart="4dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
